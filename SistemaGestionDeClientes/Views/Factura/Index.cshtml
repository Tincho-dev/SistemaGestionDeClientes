@model IEnumerable<Model.Custom.FacturaGrid>

@{
    ViewBag.Title = "Factura";
}

<h2>Factura</h2>

<p>
    @Html.ActionLink("Crear Nueva Factura", "Create", "Factura", new { @class = "btn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Factura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaEmision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Factura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaVencimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaEmision)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Total)
        </td>
        <td class="botones">
            @Html.ActionLink("Editar", "Edit", new {  id=item.Id_Factura  }, new { @class = "btn" }) |
            @Html.ActionLink("Eliminar", "Delete", new {  id=item.Id_Factura }, new { @class = "btn" }) |
            @Html.ActionLink("Imprimir", "Imprimir", new {  id=item.Id_Factura }, new { @class = "btn", @target = "_blank" })
        </td>
    </tr>
}
</table>
<div>
    @Html.ActionLink("Volver al Inicio", "Index", "Home", null , new{ @class = "btn" } )
</div>
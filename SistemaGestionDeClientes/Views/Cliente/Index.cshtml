@model IEnumerable<Model.Custom.ClienteGrid>

    @{
    ViewBag.Title = "Clientes";
    }

    <h2>Clientes</h2>

    <p>
        @Html.ActionLink("Crear Nuevo Cliente", "Create", "Cliente", new { @class = "btn" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApyNom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApyNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.DNI  }, new { @class = "btn" }) |
                @Html.ActionLink("Detalles", "Details", new {  id=item.DNI  }, new { @class = "btn" }) |
                @Html.ActionLink("Eliminar", "Delete", new {  id=item.DNI }, new { @class = "btn" }) |
            </td>
        </tr>
}

    </table>

    <div>
        <a class="btn" href="javascript:void(0);" onclick="history.go(-1);">Volver al Inicio</a>
    </div>

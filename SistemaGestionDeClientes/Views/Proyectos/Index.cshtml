@model IEnumerable<Model.Custom.ProyectosGrid>

    @{
    ViewBag.Title = "Proyectos";
    }

    <h2>Proyectos</h2>

    <p>
        @Html.ActionLink("Crear Nuevo Proyecto", "Create", "Proyectos", new { @class = "btn" })
        @Html.ActionLink("Generar Reporte", "Reporte", "Proyectos", new { @class = "btn", @target = "_blank" })
    </p>

    @using (Html.BeginForm("Buscar", "Proyectos", FormMethod.Get, new { @class = "form-inline"}))
{
    <p >
        Titulo del Proyecto: <i style="color:black;" >@Html.TextBox("palabra")</i>
        <input class="filtrar" type="submit" value="Filtrar"/>
    </p>
}


    <table class="table" width="100%">
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.Id_Proyecto)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Cliente)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>
        </tr>

        @foreach (var item in Model)
    {
    <tr>
        @*
        @<td width="3%">
            @Html.DisplayFor(modelItem => item.Id_Proyecto)
        </td>
        *@
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td width="15%">
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @item.FechaInicio.ToString("dd/MM/yyyy")
        </td>
        <td>
            @item.FechaFin.ToString("dd/MM/yyyy")
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.Id_Cliente)
        </th>
        <td >
            $@Html.DisplayFor(modelItem => item.Costo)
        </td>
        <td width="25%">
            @*
        @Html.ActionLink("Act. Costo", "UpdateCosto", new { id = item.Id_Proyecto }, new { @class = "btn" })
        @Html.ActionLink("Crear", "Create", new { id = item.Id_Proyecto }, new { @class = "btn" })
            *@
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Proyecto }, new { @class = "btn" })
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Proyecto }, new { @class = "btn" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Proyecto }, new { @class = "btn" })
            @Html.ActionLink("Asociar Cliente", "AsociarCliente", new { id = item.Id_Proyecto }, new { @class = "btn" }) |
        </td>
    </tr>
    }

    </table>
    <br />
    <hr />
    <form>
        <div class="form-inline row">
            <label class="col-md-2" style="margin-left:1rem;">Cantidad de Registros:</label>
            <div class="col-md-2">
                <input class="form-control" type="text" style="border:0;" readonly value="@Model.Count()" />
            </div>
        </div>
    </form>

    <div>
        <a class="btn" href="javascript:void(0);" onclick="history.go(-1);">Volver al Inicio</a>
    </div>

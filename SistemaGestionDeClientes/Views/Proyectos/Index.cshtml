@model IEnumerable<Model.Custom.ProyectosGrid>

@{
    ViewBag.Title = "Proyectos";
}

<h2>Proyectos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Proyecto", "Create", "Proyectos", new { @class = "btn btn-success" })
    @Html.ActionLink("Generar Reporte", "Reporte", "Proyectos", new { @class = "btn btn-success", @target = "_blank" })
</p>



@using (Html.BeginForm("Buscar", "Proyectos", FormMethod.Get, new { @class = "form-inline"}))
{
            <p>
                Proyecto: @Html.TextBox("palabra")
                <input type="submit" value="Filter" />
            </p>
}


<table class="table" width="100%">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Id_Proyecto)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechFin)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>*@
    </tr>

    @foreach (var item in Model)
    {
<tr>
    @*<td width="3%">
            @Html.DisplayFor(modelItem => item.Id_Proyecto)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Titulo)
    </td>
    <td width="15%">
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @item.FechInicio.ToString("dd/MM/yyyy")
    </td>
    <td>
        @item.FechFin.ToString("dd/MM/yyyy")
    </td>

       @*<td >
            $@Html.DisplayFor(modelItem => item.Costo)
        </td>*@
    <td width="25%">
        @Html.ActionLink("Act. Costo", "UpdateCosto", new { id = item.Id_Proyecto }, new { @class = "btn btn-default" })
        <hr />
        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Proyecto }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Crar", "Create", new { id = item.Id_Proyecto }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Detalles", "Details", new { id = item.Id_Proyecto }, new { @class = "btn btn-info" })
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Proyecto }, new { @class = "btn btn-danger" })
    </td>
</tr>
    }

</table>
<br />
<hr />
<form>
    <div class="form-inline row">
        <label class="col-md-2" style="margin-left:1rem;">Cantidad de Registros:</label>
        <div class="col-md-2">
            <input class="form-control" type="text" style="border:0;" readonly value="@Model.Count()" />
        </div>
    </div>
</form>

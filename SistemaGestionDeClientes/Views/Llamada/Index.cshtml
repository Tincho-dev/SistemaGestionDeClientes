@model IEnumerable<Model.Custom.LlamadaGrid>

    @{
    ViewBag.Title = "Llamadas";
    }

    <h2>Llamadas</h2>

    <p>
        @Html.ActionLink("Crear Llamada", "Create","Llamada", new { @class = "btn", })
        @Html.ActionLink("Generar Reporte", "Reporte", "Llamada", new { @class = "btn", @target = "_blank" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApyNom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApyNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn" }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new { @class = "btn" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class = "btn" })|
            </td>
        </tr>
}

    </table>

    <div>
        <a class="btn" href="javascript:void(0);" onclick="history.go(-1);">Volver al Inicio</a>
    </div>
    

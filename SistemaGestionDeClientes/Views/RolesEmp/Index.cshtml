@model IEnumerable<Model.Domain.RolEmp>

    @{
    ViewBag.Title = "Roles";
    }

    <h2>Roles</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Create", "RolesEmp", new { @class = "btn" })
        @Html.ActionLink("Generar Reporte", "Reporte", "RolesEmp", new { @class = "btn" })
    </p>

    <p>
        @using (Html.BeginForm("Buscar", "RolesEmp", FormMethod.Get))
    {
    <p>
        Nombre: @Html.TextBox("palabra")
        <input class="filtrar" type="submit" value="Filtrar" />
    </p>
    }
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>

                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_Rol }, new { @class = "btn" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_Rol }, new { @class = "btn" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Rol }, new { @class = "btn" })
                </td>
            </tr>
        }

        </table>
        <div>
            <a class="btn" href="javascript:void(0);" onclick="history.go(-1);">Volver al Inicio</a>
        </div>
